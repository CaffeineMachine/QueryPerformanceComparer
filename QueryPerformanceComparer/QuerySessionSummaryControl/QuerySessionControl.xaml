<TabItem x:Class="QuerySessionSummaryControl.QuerySessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="590" d:DesignWidth="790">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Url To Hit:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Name="urlPath"></TextBox>
        <Label Grid.Row="0" Grid.Column="2">Query:</Label>
        <TextBox Grid.Row="0" Grid.Column="3" Name="query"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">Repeat Count:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="tries"></TextBox>
        <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right">
            <Button>Run Tests</Button>
        </StackPanel>
    </Grid>
</TabItem>
